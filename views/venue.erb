                    </div>
                    <div class="col-md-3">
                      <a href="#"><img class="img-responsive" src="http://lorempixel.com/100/100/" /></a>
                    </div>
                  </div>
                </div>
              </aside>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-6">
          <div class="venue_comments">

                <div class="col-md-12" id="logout">
                    <div class="page-header">
                        <h3 class="reviews">Beer us some feedback</h3>
                        <div class="logout">
                            <a href="/results" class="btn btn-danger btn-lg btn-venue-phone text-uppercase" type="button">Back to results</a>
                        </div>
                    </div>

                    <div class="comment-tabs">
                        <ul class="nav nav-tabs" role="tablist">
                            <li class="active"><a href="#comments-logout" role="tab" data-toggle="tab"><h4 class="reviews text-capitalize">Comments</h4></a></li>
                            <li><a href="#add-comment" role="tab" data-toggle="tab"><h4 class="reviews text-capitalize">Add comment</h4></a></li>
                        </ul>

                        <div class="tab-content">
                            <div class="tab-pane active" id="comments-logout">
                                <ul class="media-list">

                                 <% @comments.each do | t | %>

                                  <li class="media">
                                    <a class="pull-left" href="#">
                                      <img  class="media-object img-circle" src="<%= t.photo_url %>" alt="profile">
                                    </a>
                                    <div class="media-body">
                                      <div class="well well-lg">
                                          <h4 class="media-heading text-uppercase reviews"><%= t.user_name %> </h4>
                                          <ul class="media-date text-uppercase reviews list-inline">
                                            <li class="mm"><%= t.created_at.strftime("%m") %></li>
                                            <li class="dd"><%= t.created_at.strftime("%d") %></li>
                                            <li class="aaaa"><%= t.created_at.strftime("%Y") %></li>
                                          </ul>
                                          <p class="media-comment editable_comment" data-type="text" data-pk="<%= t.id %>" data-url="/comment/<%= t.id %>" data-title="Update comment" >
                                            <%= t.comment %>
                                          </p>
                                          <form action="/venue/<%= @venue.id %>/comment/<%= t.id %>/delete" method="POST">
                                            <input name="_method" value="DELETE" type="hidden"/>
                                            <button class="btn btn-danger  text-uppercase" type="submit" id="reply"><span class="glyphicon glyphicon-share-alt"></span> Delete</button>
                                          </form>
                                      </div>
                                    </div>
                                  </li>

                                  <% end %>

                                </ul>
                            </div>
                            <div class="tab-pane" id="add-comment">
                                <form action="/venue/<%= @venue.id %>/comment/new" method="POST" class="form-horizontal" id="commentForm" role="form">
                                    <div class="form-group">
                                        <label for="email" class="col-sm-2 control-label">Comment</label>
                                        <div class="col-sm-10">
                                          <textarea class="form-control" name="comment_body" id="addComment" rows="5"></textarea>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-sm-offset-2 col-sm-10">
                                            <button class="btn btn-success text-uppercase" type="submit" id="submitComment"><span class="glyphicon glyphicon-send"></span> Summit comment</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>

                    </div>
              </div>

        </div>
      </div>
    </div>
  </div>
</section>




