      <div class="col-md-6">
          <div class="venue_comments">

                <div class="col-md-12" id="logout">
                    <div class="page-header">
                        <h3 class="reviews">Beer us some feedback</h3>
                        <div class="logout">
                            <a href="/results" class="btn btn-danger btn-lg btn-venue-phone text-uppercase" type="button">Back to results</a>
                        </div>
                    </div>

                    <div class="comment-tabs">
                        <ul class="nav nav-tabs" role="tablist">
                            <li class="active"><a href="#comments-logout" role="tab" data-toggle="tab"><h4 class="reviews text-capitalize">Comments</h4></a></li>
                            <li><a href="#add-comment" role="tab" data-toggle="tab"><h4 class="reviews text-capitalize">Add comment</h4></a></li>
                        </ul>

                        <div class="tab-content">
                            <div class="tab-pane active" id="comments-logout">
                                <ul class="media-list">

                                 <% @comments.each do | t | %>

                                  <li class="media">
                                    <a class="pull-left" href="#">
                                      <img  class="media-object img-circle" src="<%= t.photo_url %>" alt="profile">
                                    </a>
                                    <div class="media-body">
                                      <div class="well well-lg">
                                          <h4 class="media-heading text-uppercase reviews"><%= t.user_name %> </h4>
                                          <ul class="media-date text-uppercase reviews list-inline">
                                            <li class="mm"><%= t.created_at.strftime("%m") %></li>
                                            <li class="dd"><%= t.created_at.strftime("%d") %></li>
                                            <li class="aaaa"><%= t.created_at.strftime("%Y") %></li>
                                          </ul>
                                          <p class="media-comment">
                                            <%= t.comment %>
                                          </p>
                                          <form action="/venue/<%= @venue.id %>/comment/<%= t.id %>/delete" method="POST">
                                            <input name="_method" value="DELETE" type="hidden"/>
                                            <button class="btn btn-danger  text-uppercase" type="submit" id="reply"><span class="glyphicon glyphicon-share-alt"></span> Delete</button>
                                          </form>
                                          <a class="btn btn-primary text-uppercase" data-toggle="collapse" href="#replyOne"><span class="glyphicon glyphicon-comment"></span> Edit</a>
                                      </div>
                                    </div>
                                    <div class="collapse" id="replyOne">
                                        <ul class="media-list">
                                            <li class="media media-replied">
                                                <a class="pull-left" href="#">
                                                  <img class="media-object img-circle" src="https://s3.amazonaws.com/uifaces/faces/twitter/ManikRathee/128.jpg" alt="profile">
                                                </a>
                                                <div class="media-body">
                                                  <div class="well well-lg">
                                                      <h4 class="media-heading text-uppercase reviews"><span class="glyphicon glyphicon-share-alt"></span> The Hipster</h4>
                                                      <ul class="media-date text-uppercase reviews list-inline">
                                                        <li class="mm">09</li>
                                                        <li class="dd">22</li>
                                                        <li class="aaaa">2014</li>
                                                      </ul>
                                                      <p class="media-comment">
                                                        Had it, it sucks!
                                                      </p>
                                                      <a class="btn btn-info text-uppercase" href="#" id="reply"><span class="glyphicon glyphicon-share-alt"></span> Reply</a>
                                                  </div>
                                                </div>
                                            </li>
                                            <li class="media media-replied" id="replied">
                                                <a class="pull-left" href="#">
                                                  <img class="media-object img-circle" src="https://pbs.twimg.com/profile_images/442656111636668417/Q_9oP8iZ.jpeg" alt="profile">
                                                </a>
                                                <div class="media-body">
                                                  <div class="well well-lg">
                                                      <h4 class="media-heading text-uppercase reviews"><span class="glyphicon glyphicon-share-alt"></span> Mary</h4></h4>
                                                      <ul class="media-date text-uppercase reviews list-inline">
                                                        <li class="mm">09</li>
                                                        <li class="dd">22</li>
                                                        <li class="aaaa">2014</li>
                                                      </ul>
